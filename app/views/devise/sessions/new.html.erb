<%# app/views/devise/sessions/new.html.erb %>
<div class="grid grid-cols-1 gap-y-12 mx-4 my-12">
  <!-- Page Title -->
  <h1 class="text-3xl font-bold text-center">Sign In</h1>

  <!-- Form Card -->
  <div class="bg-white shadow rounded-lg p-8 max-w-md mx-auto">
    <%= form_with scope: :user, url: session_path(:user), local: true do |f| %>
      <% if flash[:alert] %>
        <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="space-y-6">
        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm 
                       focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password,
                autocomplete: "current-password",
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm 
                       focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
        </div>

        <!-- Remember me -->
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>

        <!-- Submit -->
        <div class="pt-4">
          <%= f.submit "Sign in",
                class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold 
                       py-2 rounded shadow" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-2">
      <%= link_to "Forgot your password?", new_password_path(resource_name),
            class: "text-sm text-blue-600 hover:underline" %><br>
      <%= link_to "Sign up for an account", new_registration_path(resource_name),
            class: "text-sm text-blue-600 hover:underline" %>
    </div>
  </div>
</div>
